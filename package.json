{
  "name": "web-app-template",
  "version": "0.0.1",
  "description": "",
  "packageManager": "pnpm@9.15.5",
  "scripts": {
    "setup": "corepack enable pnpm",
    "dev": "pnpm db:up && pnpm db:migrate && pnpm generate:client && next dev",
    "start": "next start",
    "build": "pnpm generate:client && next build",
    "build:test": "NODE_ENV=test pnpm build",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "NODE_ENV=test vitest watch",
    "test:e2e": "NODE_ENV=test playwright test",
    "test:e2e:ui": "pnpm test:e2e --ui",
    "db:up": "docker compose up -d && sleep 0.5",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset -f",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "generate:client": "prisma generate && prettier -w ./prisma/ERD.md",
    "lint": "biome lint --write .",
    "fmt": "prettier -w './**/*.{md,yml}' && biome format --write . && prisma format"
  },
  "dependencies": {
    "@auth/prisma-adapter": "2.7.4",
    "@hookform/resolvers": "3.10.0",
    "@opentelemetry/exporter-metrics-otlp-grpc": "0.57.1",
    "@opentelemetry/exporter-trace-otlp-grpc": "0.57.1",
    "@opentelemetry/exporter-trace-otlp-proto": "0.57.1",
    "@opentelemetry/instrumentation-http": "0.57.1",
    "@opentelemetry/resources": "1.30.1",
    "@opentelemetry/sdk-metrics": "1.30.1",
    "@opentelemetry/sdk-node": "0.57.1",
    "@opentelemetry/sdk-trace-base": "1.30.1",
    "@opentelemetry/semantic-conventions": "1.28.0",
    "@prisma/client": "6.3.0",
    "@prisma/instrumentation": "6.3.0",
    "clsx": "2.1.1",
    "next": "15.1.6",
    "next-auth": "5.0.0-beta.25",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "7.54.2",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@next/env": "15.1.6",
    "@playwright/test": "1.50.1",
    "@tailwindcss/postcss": "4.0.3",
    "@testing-library/react": "16.2.0",
    "@types/node": "22.13.1",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "@vitejs/plugin-react": "4.3.4",
    "jsdom": "26.0.0",
    "lefthook": "1.10.10",
    "postcss": "8.5.1",
    "prettier": "3.4.2",
    "prisma": "6.3.0",
    "prisma-erd-generator": "2.0.4",
    "tailwindcss": "4.0.3",
    "testcontainers": "10.17.2",
    "typescript": "5.7.3",
    "vitest": "3.0.5"
  }
}
