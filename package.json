{
  "name": "web-app-template",
  "version": "0.0.1",
  "description": "",
  "packageManager": "pnpm@9.15.2",
  "scripts": {
    "setup": "git config --local core.hooksPath .githooks && corepack enable pnpm",
    "dev": "pnpm db:up && pnpm db:migrate && pnpm generate:client && next dev",
    "start": "next start",
    "build": "pnpm generate:client && next build",
    "test": "dotenv -e .env.test -- vitest run",
    "test:watch": "dotenv -e .env.test -- vitest watch",
    "test:e2e": "dotenv -e .env.test -- playwright test",
    "test:e2e:ui": "dotenv -e .env.test -- playwright test --ui",
    "db:up": "docker compose --env-file .env.local up -d && sleep 0.5",
    "db:stop": "docker compose stop",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:reset": "dotenv -e .env.local -- prisma migrate reset -f",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "generate:client": "dotenv -e .env.local -- prisma generate",
    "lint": "biome lint . --write",
    "fmt": "prettier -w './**/*.{md,yml}' && biome format --write ."
  },
  "dependencies": {
    "@auth/prisma-adapter": "2.7.4",
    "@hookform/resolvers": "3.9.1",
    "@opentelemetry/exporter-trace-otlp-grpc": "0.57.0",
    "@opentelemetry/instrumentation-http": "0.57.0",
    "@opentelemetry/resources": "1.30.0",
    "@opentelemetry/sdk-node": "0.57.0",
    "@opentelemetry/sdk-trace-base": "1.30.0",
    "@opentelemetry/semantic-conventions": "1.28.0",
    "@prisma/client": "6.1.0",
    "@prisma/instrumentation": "6.1.0",
    "next": "15.1.3",
    "next-auth": "5.0.0-beta.25",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "7.54.2",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@playwright/test": "1.49.1",
    "@testing-library/react": "16.1.0",
    "@types/node": "22.10.2",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "@vitejs/plugin-react": "4.3.4",
    "autoprefixer": "10.4.20",
    "dotenv-cli": "8.0.0",
    "lint-staged": "15.3.0",
    "postcss": "8.4.49",
    "prettier": "3.4.2",
    "prisma": "6.1.0",
    "prisma-erd-generator": "1.11.2",
    "tailwindcss": "3.4.17",
    "testcontainers": "10.16.0",
    "typescript": "5.7.2",
    "vitest": "2.1.8"
  }
}
