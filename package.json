{
  "name": "",
  "version": "0.0.1",
  "description": "",
  "packageManager": "pnpm@9.15.2",
  "scripts": {
    "setup": "git config --local core.hooksPath .githooks && corepack enable pnpm",
    "dev": "pnpm dev:db:setup && next dev",
    "dev:db:setup": "pnpm dev:db:up && pnpm db:migrate && pnpm db:generate",
    "dev:db:up": "docker compose --env-file .env.local up -d && pnpm wait",
    "dev:db:reset": "dotenv -e .env.local -- pnpm db:reset",
    "test": "dotenv -e .env.test -- vitest run",
    "test:watch": "dotenv -e .env.test -- vitest watch",
    "test:e2e": "dotenv -e .env.test -- playwright test",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:generate": "dotenv -e .env.local -- pnpm generate:client",
    "db:stop": "docker compose stop",
    "db:reset": "prisma migrate reset -f",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "generate:client": "prisma generate",
    "wait": "sleep 0.5",
    "build": "pnpm generate:client --generator client && next build",
    "start": "next start",
    "lint": "biome lint . --write",
    "fmt": "prettier -w './**/*.{md,yml}' && biome format --write ."
  },
  "dependencies": {
    "@auth/prisma-adapter": "2.5.3",
    "@hookform/resolvers": "3.9.1",
    "@opentelemetry/exporter-trace-otlp-grpc": "0.53.0",
    "@opentelemetry/instrumentation-http": "0.53.0",
    "@opentelemetry/resources": "1.26.0",
    "@opentelemetry/sdk-node": "0.53.0",
    "@opentelemetry/sdk-trace-base": "1.26.0",
    "@opentelemetry/semantic-conventions": "1.27.0",
    "@prisma/client": "5.20.0",
    "@prisma/instrumentation": "5.20.0",
    "next": "14.2.22",
    "next-auth": "4.24.11",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "7.53.2",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@playwright/test": "1.47.2",
    "@testing-library/react": "16.0.1",
    "@types/node": "22.10.2",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "@vitejs/plugin-react": "4.3.4",
    "autoprefixer": "10.4.20",
    "dotenv-cli": "8.0.0",
    "lint-staged": "15.2.11",
    "postcss": "8.4.49",
    "prettier": "3.4.2",
    "prisma": "5.20.0",
    "prisma-erd-generator": "1.11.2",
    "tailwindcss": "3.4.17",
    "testcontainers": "10.16.0",
    "typescript": "5.6.3",
    "vitest": "2.1.8"
  }
}
